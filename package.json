    "husky": "^5.0.9",
    "idb-keyval": "^3.2.0",
    "intl": "~1.2.5",
    "jquery": "~3.4.1",
    "jszip": "~3.2.2",
    "lodash": "~4.17.15",
    "lodash-es": "^4.17.20",
    "ngx-markdown": "8.2.2",
    "ngx-monaco-editor": "~8.1.1",
    "ngx-sortablejs": "^3.1.4",
    "ngx-toastr": "~12.0.0",
    "ngx-ui-switch": "~9.0.1",
    "ngx-uploader": "~8.0.0",
    "rxjs": "~6.6.0",
